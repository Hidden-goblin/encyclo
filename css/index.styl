// https://learnboost.github.io/stylus/

$gutter = 20px;

html {
    font-family: sans-serif;
}

html,
body {
  min-height: 100vh;
  padding: 0;
  margin: 0;
}

body {
  display: flex;
  flex-direction: column;
}

header,
main,
footer {
  padding-left: calc(50% - 512px);
  padding-right: @padding-left;
}
header {
  background: #222;
  text-align: center;

  ul,
  li {
    margin: 0;
    padding: 0;
  }
  li,
  a {
    display: inline-block;
  }
  a {
    color: white;
    height: 50px;
    line-height: @height;
    text-decoration: none;
    padding-left: 1em;
    padding-right: @padding-left;
  }

}

main {
  // max-width: 1024px;
  // margin: 0 auto;
  padding: $gutter;

  flex-grow: 1;
  flex-shrink: 0;
  // IE 9
  display: block;

  @media (min-width: 1025px)  {
    margin-left: calc(50% - 512px);
    margin-right: @margin-left;
  }

  a {
  color: mediumVioletRed;
  }
}

footer {
  background: #222;
  min-height: 50px;
}


fieldset {
  border: 0;
  padding: 0;
}
legend {
  font-size: 2em;
}
label {
  padding: 1.5em 0 .5em;
  display: block;
}

input,
textarea {
  font-family: inherit;
  font-size: inherit;
  width: 100%;
  border: 1px solid #CCC;
  padding: .25em;
}

textarea {
  min-height: 5em;
}

button[type=submit] {
  font-family: inherit;
  font-size: inherit;
  margin-top: 1.5em;
  border-radius: 0;
  background: mediumVioletRed;
  color: white;
  padding: .5em;
  border: 0;
}
